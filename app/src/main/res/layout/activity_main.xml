<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.main.view.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/relative_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:stateListAnimator="@null"
            android:background="@color/grey_dark_background"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/layout_default_toolbar" />

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/frame_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/app_bar_layout" />
            <!--android:background="@drawable/shape_gradient_background"-->


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:background="@color/transparent">

            <LinearLayout
                android:id="@+id/linear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape_rounded_corners_grey_darker">

                <ImageView
                    android:id="@+id/image_button_drawer"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:paddingStart="@dimen/padding_13"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingEnd="@dimen/padding_4"
                    android:paddingBottom="@dimen/padding_10"
                    android:src="@drawable/ic_nav_menu" />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/transparent" />

            <RelativeLayout
                android:id="@+id/relative_nav"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/grey_dark_background">

                <RelativeLayout
                    android:id="@+id/relative_top_nav"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="100dp">

                    <View
                        android:id="@+id/top_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_grey" />

                    <ListView
                        android:id="@+id/list_view_nav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/top_divider"
                        android:divider="@color/divider_grey"
                        android:dividerHeight="1dp"
                        android:smoothScrollbar="true"
                        tools:listitem="@layout/item_nav_drawer" />

                    <View
                        android:id="@+id/bottom_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/list_view_nav"
                        android:background="@color/divider_grey" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_top_nav"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="30dp"
                    android:gravity="bottom">

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_grey" />

                    <ListView
                        android:id="@+id/list_view_bottom_nav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider"
                        android:layout_centerInParent="true"
                        android:divider="@color/divider_grey"
                        android:dividerHeight="1dp"
                        android:smoothScrollbar="true"
                        tools:listitem="@layout/item_nav_drawer" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>