<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/grey_light</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.StartScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.Main.WhiteStatusBar" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/grey_action_bar</item>
    </style>

    <style name="TextInputLoginStyle">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/blue_lighter_dark</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:textColorHint">@color/blue_lighter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyle14BlueDarker">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/blue_lighter_dark</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ButtonLoginStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/shape_blue_gradient_background</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/blue_lighter_two</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonEmptyCenterStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/shape_round_empty_center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/blue_lighter_two</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextStyleTitle22BlueLighter">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/blue_lighter</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyleSubtitle18BlueLighter">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/blue_lighter_dark</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyleSubtitle">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyleDetails">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/blue_lighter_dark</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyleDetailsInput">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/blue_lighter_two</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyleTitle20BlueLight">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/blue_lighter_two</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyleText14BlueLighter">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/blue_lighter</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyleNavMenuItemTitle">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:fontFamily">@font/heebo_medium</item>
        <item name="fontFamily">@font/heebo_medium</item>
    </style>

    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/blue_lighter_dark</item>
        <item name="android:fontFamily">@font/heebo</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextInputEditText" parent="Widget.Design.TextInputLayout">
        <item name="fontFamily">@font/heebo</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColorHint">@color/blue_lighter_two</item>
        <item name="android:textColor">@color/blue_lighter_two</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="backgroundTint">@color/blue_lighter_two</item>
        <item name="android:colorControlNormal">@color/blue_lighter_two</item>
        <item name="android:colorControlActivated">@color/blue_lighter_two</item>
        <item name="android:colorControlHighlight">@color/blue_lighter_two</item>
        <item name="android:colorAccent">@color/blue_lighter_two</item>
        <item name="colorAccent">@color/blue_lighter_two</item>
    </style>

</resources>
